@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}
@section Styles {
    <link rel="stylesheet" href="~/assets/css/login.css" />
}
@model LoginVM

<form asp-action="Login" asp-controller="Auth" method="post">
    <div class="input-wrapper">
        <label for="email">Email</label>
        <input id="email" asp-for="Email" placeholder="Enter your email..." />
        <span asp-validation-for="Email" style="color:red"></span>
    </div>
    <div class="input-wrapper">
        <label for="password">Password</label>
        <input id="password"
               asp-for="Password"
               placeholder="Enter your password..." />
        <span asp-validation-for="Password" style="color:red"></span>
    </div>
    <div class="remember-wrapper">
        <label for="remember-me">Remember me</label>
        <input id="remember-me" asp-for="RememberMe" />
    </div>
    <button type="submit">Login</button>
    <div asp-validation-summary="ModelOnly" style="color:red"></div>
</form>
<div class="register-wrapper">
    Don't have an account?
    <a asp-action="Register" asp-controller="Auth">Register</a>
</div>